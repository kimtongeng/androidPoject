<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5E9FB"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="70dp"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/imgbar"
                android:contentDescription="@string/imagecategory" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="69dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/logo" />


            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_shape"
                android:clipChildren="true"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/imageProfile"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00FFFFFF"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/developer"
                    android:contentDescription="@string/imageprofile" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/radien"

            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="29dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/search"
                android:contentDescription="@string/imagesearch" />

            <EditText
                android:id="@+id/editTextText"
                android:layout_width="182dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:background="@null"
                android:hint="@string/search"
                />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/microphone"
                android:contentDescription="imageCrophone" />

        </LinearLayout>



        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:text="@string/all_featured"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/featured_radius"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"

                >

                <!--                <ImageView-->
                <!--                    android:id="@+id/imageView2"-->
                <!--                    android:layout_width="70dp"-->
                <!--                    android:layout_height="70dp"-->
                <!--                    app:srcCompat="@drawable/gadgets" />-->
                <ImageButton
                    android:id="@+id/imageEle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/gadgets"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:contentDescription="@string/imagecategory" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:text="@string/electronics"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"

                >

                <ImageButton
                    android:id="@+id/imageMen"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/maleclothes"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    android:contentDescription="@string/imagecategory" />

                <TextView
                    android:id="@+id/txMens"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:text="@string/mens"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:gravity="center"

                >

                <ImageButton
                    android:id="@+id/imageWomen"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/fashion"
                    android:scaleType="fitCenter"
                    android:background="@color/white"
                    />


                <TextView
                    android:id="@+id/txWomens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="@string/womens"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/product_background"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/imageProduct1"
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                app:srcCompat="@drawable/men1" />


                            <TextView
                                android:id="@+id/nameProduct1"
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                android:text="@string/dnzzs_mens_oversized_hoodie_unisex"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/priceProduct1"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/_39_99"
                                android:textColor="#C82323"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/order1"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/pro_btn"
                                android:text="@string/oreder_now"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/product_background"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/imageProduct2"
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                app:srcCompat="@drawable/men2" />


                            <TextView
                                android:id="@+id/nameProduct2"
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                android:text="@string/faiable_mens_oversized_hoodie_pullover"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/priceProduct2"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/_29_99"
                                android:textColor="#C82323"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/order2"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/pro_btn"
                                android:text="@string/oreder_now"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"

                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/product_background"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/imageProduct3"
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                app:srcCompat="@drawable/men3" />


                            <TextView
                                android:id="@+id/nameProduct3"
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                android:text="@string/paodikuai_men_hoodie_sweatshirt_loose_fit_fashion"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/priceProduct3"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/_40"
                                android:textColor="#C82323"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/order3"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/pro_btn"
                                android:text="@string/oreder_now"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/product_background"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/imageProduct4"
                                android:layout_width="180dp"
                                android:layout_height="200dp"
                                app:srcCompat="@drawable/men4" />


                            <TextView
                                android:id="@+id/nameProduct4"
                                android:layout_width="180dp"
                                android:layout_height="80dp"
                                android:text="@string/match_men_s_slim_tapered"
                                android:textColor="#000000"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/priceProduct4"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/_99_99"
                                android:textColor="#C82323"
                                android:textSize="34sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/order4"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/pro_btn"
                                android:text="@string/oreder_now"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>